<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View ubo.device View Tree -->
    <record id="view_ubo_device_tree" model="ir.ui.view">
        <field name="name">view.ubo.device.tree</field>
        <field name="model">ubo.device</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="ip_adress"/>
                <field name="port_number"/>
            </tree>
        </field>
    </record>

    <!-- View ubo.device form -->
    <record id="view_ubo_device_form" model="ir.ui.view">
        <field name="name">view.ubo.device.form</field>
        <field name="model">ubo.device</field>
        <field name="arch" type="xml">
            <form string="Ubo Device">
            <header>
                <button name="test_connection" type="object" string="Tester la connexion" class="btn-primary"/>
                <button name="clear_attendance" type="object" string="Effacer les prÃ©sences" class="btn-danger"/>
                <field name="states" widget="statusbar"  nolabel="1" />
            </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Model"/>
                        </h1>
                        <group>
                            <group><field name="ip_adress"/></group>
                            <group><field name="port_number"/></group>
                        </group>
                    </div>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <!-- View ubo.device search -->
    <record id="view_ubo_device_search" model="ir.ui.view">
        <field name="name">view.ubo.device.search</field>
        <field name="model">ubo.device</field>
        <field name="arch" type="xml">
            <search>
                <group expand="1" string="Group By">
                    <filter string="Name" name="name" domain="[]" context="{'group_by':'name'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action ubo.device -->
    <record id="action_ubo_device" model="ir.actions.act_window">
        <field name="name">Empreintes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ubo.device</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Il n'y a pas d'exemples, cliquez ici pour ajouter un nouvel appareil.
            </p>
        </field>
    </record>

</odoo>
