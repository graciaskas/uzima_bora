<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- View ubo.presence View Tree -->
    <record id="view_ubo_presence_tree" model="ir.ui.view">
        <field name="name">view.ubo.presence.tree</field>
        <field name="model">ubo.presence</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="journalier_id"/>
                <field name="checkin"/>
                <field name="checkout"/>
                <field name="site"/>
                <field name="company_id"/>
            </tree>
        </field>
    </record>

    <!-- View ubo.presence form -->
    <record id="view_ubo_presence_form" model="ir.ui.view">
        <field name="name">view.ubo.presence.form</field>
        <field name="model">ubo.presence</field>
        <field name="arch" type="xml">
            <form string="Ubo Presence">
                <header>
                    <button name="action_done" type="object" string="Enregistrer la sortie" class="btn-primary"
                    attrs="{'invisible':[('states','=','done')]}"
                    />
                    <field name="states" widget="statusbar"  nolabel="1" />
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="journalier_id" placeholder="Journalier..."/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="checkin"/>
                            <field name="site" attrs="{'readonly':[('states','=','done')]}"/>
                        </group>
                        <group>
                            <field name="checkout"/>
                            <field name="worked_hours"/>
                            <field name="company_id"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>



     <record id="view_ubo_presence_search" model="ir.ui.view">
        <field name="name">view.ubo.presence.search</field>
        <field name="model">ubo.presence</field>
        <field name="arch" type="xml">
            <search string="Hr Attendance Search">
                <field name="journalier_id"/>
                <!-- <field name="site" operator="child_of"/> -->
                <filter string="Site Tangawisi" name="site" domain="[('site', '=', 'tangawisi')]" />
                <filter string="Site Ihango" name="site" domain="[('site', '=', 'ihango')]" />
                <separator/>

                <group expand="0" string="Group By">
                    <filter string="Journalier" name="journalier" context="{'group_by': 'journalier_id'}"/>
                    <filter string="Check In" name="groupby_name" context="{'group_by': 'checkin'}"/>
                    <filter string="Check Out" name="groupby_check_out" context="{'group_by': 'checkout'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Action ubo.presence -->
    <record id="action_ubo_presence" model="ir.actions.act_window">
        <field name="name">Présences</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ubo.presence</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Il n'y a pas d'exemples, cliquez ici pour ajouter une présence de journalier .
            </p>
        </field>
    </record>


</odoo>
