<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_hr_attendance_wizard" model="ir.ui.view">
        <field name="name">view.ubo.journalier.wizard</field>
        <field name="model">report.hr.presence</field>
        <field name="arch" type="xml">
            <form string="Ubo presence">
                <group>
                    <field name="employee_id"/>
                </group>
                <group>
                    <group><field name="date_start"/></group>
                    <group><field name="date_end"/></group>
                </group>
                <footer>
                    <button name="print_report" string="Imprimer" type="object" class="btn-primary"/>
                    <button string="Annuler" special="cancel"  class="btn-default"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_hr_attendance_wizard" model="ir.actions.act_window">
        <field name="name">Rapport de Pr√©sences</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">report.hr.presence</field>
        <field name="view_mode">form</field>
       <field name="target">new</field>
    </record>

</odoo>
